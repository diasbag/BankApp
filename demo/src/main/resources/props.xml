<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="memoryAccountDAO" class="com.example.demo.MemoryAccountDAO"></bean>
    <bean id="accountDAO" class="com.example.demo.AccountDAO" abstract="true"></bean>
    <bean id="accountListening" class="com.example.demo.AccountListingService" abstract="true"></bean>
    <bean id="accountListeningImlI" class="com.example.demo.AccountListingServiceImpI">
        <constructor-arg ref="memoryAccountDAO"></constructor-arg>
    </bean>
    <bean id="accountCreation" class="com.example.demo.AccountCreationService" abstract="true"></bean>
    <bean id="accountCreationImpI" class="com.example.demo.AccountCreationServiceImpI">
        <constructor-arg ref="memoryAccountDAO"></constructor-arg>
    </bean>
    <bean id="bankCore" class="com.example.demo.BankCore">
        <constructor-arg ref="accountCreationImpI"></constructor-arg>
    </bean>
    <bean id="createAccountOperationUI" class="com.example.demo.CreateAccountOperationUI" abstract="true"></bean>
    <bean id="cliUI" class="com.example.demo.CLIUI" abstract="true"></bean>
    <bean id="myCLI" class="com.example.demo.MyCLI" lazy-init="true"></bean>
    <bean id="accountBasicCLI" class="com.example.demo.AccountBasicCLI">
        <constructor-arg ref="myCLI"></constructor-arg>
        <constructor-arg ref="bankCore"></constructor-arg>
        <constructor-arg ref="accountListeningImlI"></constructor-arg>
    </bean>
</beans>